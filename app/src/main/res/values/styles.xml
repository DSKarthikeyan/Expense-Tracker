<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/teal_900</item>
        <item name="itemIconTint">@color/mtrl_navigation_bar_colored_item_tint</item>
        <item name="itemRippleColor">@color/mtrl_navigation_bar_colored_ripple_color</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/mtrl_navigation_bar_colored_item_tint</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.PrimarySurface" parent="Widget.MaterialComponents.BottomNavigationView.Colored"/>

    <style name="fab_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Style10_Base">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-2sp</item>
    </style>

    <style name="Style12_Base">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">-1sp</item>
    </style>

    <style name="Style16_Base">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.13</item>
        <item name="android:textStyle">normal</item>
<!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="Style18_Base">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Style20_Base">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">20sp</item>
        <item name="android:includeFontPadding">false</item>
<!--        <item name="android:fontFamily">@font/roboto_regular</item>-->
    </style>

    <style name="Style28_Base">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">30sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="StyleAddNewExpense" parent="Style18_Base">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="StyleAddNewExpense.TextView" parent="StyleAddNewExpense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/add_new_expense_text_view_margin_start</item>
    </style>

    <style name="StyleAddNewExpense.AutoTextFriends" parent="StyleAddNewExpense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/add_new_expense_edit_text_view_margin_end</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">90</item>
    </style>

    <style name="StyleAddNewExpense.EditTextDescription" parent="StyleAddNewExpense">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:inputType">textCapWords|textAutoComplete</item>
        <item name="android:maxLength">90</item>
    </style>

    <style name="StyleAddNewExpense.EditTextCurrency" parent="StyleAddNewExpense">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="StyleAddNewExpense.ButtonAddExpense" parent="StyleAddNewExpense">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StyleExpenseDetails" parent="Style18_Base">
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="StyleExpenseDetails.TextExpenseDescription" parent="StyleExpenseDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">@dimen/expense_details_text_view_margin_end</item>
        <item name="android:layout_marginTop">@dimen/expense_details_text_view_margin_top</item>
        <item name="android:layout_marginStart">@dimen/expense_details_text_view_margin_start</item>
    </style>

    <style name="StyleExpenseDetails.TextExpenseDetails" parent="StyleExpenseDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/expense_details_text_view_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/expense_details_text_view_margin_end</item>
        <item name="android:layout_marginStart">@dimen/expense_details_text_view_margin_start</item>
    </style>

    <style name="StyleExpenseDetails.TextAmountDetails" parent="Style12_Base">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginEnd">@dimen/expense_details_amount_text_view_margin_end</item>
    </style>

    <style name="CustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@drawable/transparent_toggle_button_selector</item>
        <item name="rippleColor">@color/selected_button_ripple</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/CustomButtonShape</item>
    </style>

    <style name="CustomButtonShape" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@drawable/tab_selector_chart</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@drawable/button_background</item>
        <item name="rippleColor">@color/selected_button_ripple</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">@style/CustomButtonShape</item>
    </style>
</resources>