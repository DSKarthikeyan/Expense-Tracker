<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Bank Link Item -->
    <LinearLayout
        android:id="@+id/itemBankLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/account_item_unselected"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/walletBankImageGroup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_icon_background">

            <ImageView
                android:id="@+id/walletBankImageView"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:contentDescription="@string/text_category"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_bank_38" />
        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvBankLinkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Link"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBankLinkDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect your bank account to deposit &amp; fund"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Checkmark -->
        <ImageView
            android:id="@+id/imgBankLinkCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_30"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Microdeposits Item -->
    <LinearLayout
        android:id="@+id/itemMicroDeposits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/account_item_unselected"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemBankLink">

        <!-- Icon -->
        <FrameLayout
            android:id="@+id/walletMicroDepositsImageGroup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_icon_background">

            <ImageView
                android:id="@+id/walletMicroDepositsImageView"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:contentDescription="@string/text_category"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dollar_38" />
        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvMicrodepositsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Micro Deposits"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMicrodepositsDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect bank in 5-7 days"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Checkmark -->
        <ImageView
            android:id="@+id/imgMicrodepositsCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_30"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Paypal Item -->
    <LinearLayout
        android:id="@+id/itemPaypal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/account_item_unselected"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemMicroDeposits">

        <!-- Icon -->
        <FrameLayout
            android:id="@+id/walletPaypalImageGroup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/round_icon_background">

            <ImageView
                android:id="@+id/walletPaypalImageView"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:contentDescription="@string/text_category"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_paypal" />
        </FrameLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/tvPaypalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paypal"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPaypalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect your Paypal account"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Checkmark -->
        <ImageView
            android:id="@+id/imgPaypalCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_30"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Next Button -->
    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:text="@string/text_next"
        android:textAllCaps="false"
        android:textColor="@color/teal_800"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemPaypal"  />

</androidx.constraintlayout.widget.ConstraintLayout>
